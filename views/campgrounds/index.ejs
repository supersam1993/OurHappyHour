<% include ../partials/header %>



<!--<div class = "container">-->
    <header class = "jumbotron">  <!--header is just same as div, just more meaningful-->
        <div class = "container">
            <!--<h1><span class="glyphicon glyphicon-tent"></span> Welcome to Our HappyHour!</h1>-->
            <h1> Welcome to Our HappyHour!</h1>
            <p>Discover happy hour near you</p>
            <p>
                <a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add New HappyHour!</a>
            </p>
        </div>
    </header>
    
    <div class = "row" style = "display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){%>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">  <!--thumbnail: border-->
                    <div class = "div-for-img">
                        <img class = "thumbnail-img" src = "<%= campground.image%>">
                    </div>
                    
                    <div class = "caption">
                        <h4><%= campground.name%></h4>
                    </div>
                    <p>
                        <a href = "/campgrounds/<%= campground._id%>" class = "btn btn-primary moreInfo">More Info</a>
                    </p>
                </div>
            </div>
        <% });%>
    </div>
<!--</div>-->

<% include ../partials/footer %>